<Window x:Class="RecipeAppWPF.DisplayRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Display Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Display Recipe" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

            <ComboBox x:Name="cbRecipes" Width="300" Margin="10"/>
            <Button Name="btnDisplayRecipe" Content="Display Recipe" Width="150" Margin="10" Click="BtnDisplayRecipe_Click"/>
            <TextBlock Name="txtRecipeDetails" FontSize="16" Margin="10"/>

            <Button Name="btnScaleRecipe" Content="Scale Recipe" Width="100" Margin="10" Click="BtnScaleRecipe_Click"/>
            <Button Name="btnResetRecipe" Content="Reset Recipe" Width="100" Margin="10" Click="BtnResetRecipe_Click"/>
            <Button Name="btnClearRecipe" Content="Clear Recipe" Width="100" Margin="10" Click="BtnClearRecipe_Click"/>
        </StackPanel>
    </Grid>
</Window>
