<Window x:Class="RecipeAppWPF.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel>
                <TextBlock Text="{Binding scaledRecipe}" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

                <TextBlock Text="Scale Recipe by 0.5, 2 or 3" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

                <ComboBox Name="cbScale" Width="200" Margin="10">
                        <ComboBoxItem Content="0.5"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                </ComboBox>

                <Button Name="btnDoneScale" Content="Done Selecting" Width="100" Margin="10" Click="BtnDoneScale_Click"/>

        </StackPanel>
    </Grid>
</Window>
